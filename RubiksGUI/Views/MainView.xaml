<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
	xmlns:ic="http://schemas.microsoft.com/expression/2010/interactions"
	xmlns:local="clr-namespace:RubiksGUI"
	mc:Ignorable="d"
	x:Class="RubiksGUI.MainView"
	d:DesignWidth="640" d:DesignHeight="480">
    <UserControl.Resources>
        <local:MainViewModel x:Key="MainViewModelDataSource" />
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot" DataContext="{Binding Source={StaticResource MainViewModelDataSource}}" d:DataContext="{d:DesignData /SampleData/MainViewModelSampleData.xaml}" Background="#FF36B165">
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"><Run Text="Sample "/><Run Language="de-ch" Text="{Binding Cubies}"/><Run Text="Text Property Value"/></TextBlock>
    </Grid>
</UserControl>